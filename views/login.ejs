<!DOCTYPE html>
<html lang="en">
<head>
  <% include ./partials/head %>
  <style type="text/css">
    body {
        background-color: #DADADA;
    }
    body > .grid {
        height: 100%;
    }
    .image {
        margin-top: -100px;
        }
    .column {
        max-width: 450px;
    }
  </style>
  <script>
    $(document).ready(function() {
      $('.ui.form').form({
        fields: {
          email: {
            identifier: 'email',
            rules: [
            {
              type: 'email',
              prompt: 'Please enter a valid UPenn email address'
            }]
          }
        }
      });
    });
  </script>
</head>
<body>
  <div class="ui middle aligned center aligned grid">
    <div class="column">
      <h2 class="ui red image header">
        <div class="content">
          Penn Coursify
        </div>
      </h2>
      <% include ./partials/flash %>
      <% if (messages.form_errors.length !== 0) { %>
        <form class="ui large form error" action="/send-token" method="POST">
      <% } else { %>
        <form class="ui large form" action="/send-token" method="POST">
      <% } %>
          <div class="ui error message">
            <% include ./partials/form_err %>
          </div>
          <div class = "ui stacked segment">
            <div class="field">
              <div class="ui input">
                <input type="text" name="email" placeholder="UPenn E-mail address">
              </div>
            </div>
            <button class="ui fluid red submit button">Log In</button>
          </div>
        </form>
    </div>
  </div>
</body>
</html>
